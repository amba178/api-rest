.page-header
	%h1{class: "text-center"} Products

%table{class: "table table-striped table-bordered"}
	%tr
		%th Product Name 
		%th Category
		%th Release Date
		%th Price
	-@products.each do |product| 
		%tr
			%td=link_to product.name, product
			%td= product.category.name
			%td= product.released_on.strftime("%B %e, %Y")
			%td= number_to_currency product.price  


%p= link_to "New Product", new_product_path, class: "btn btn-info" 

